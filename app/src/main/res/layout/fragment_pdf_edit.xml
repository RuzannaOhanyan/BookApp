<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PdfEditFragment">


    <EditText
        android:id="@+id/ed_categorie_up"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_edittext01"
        android:drawableStart="@drawable/ic_categorie_gray"
        android:drawableEnd="@drawable/ic_down_gray"
        android:ems="10"
        android:layout_margin="16dp"
        android:hint="Գրքի ժանրը "
        android:inputType="textEmailAddress"
        android:paddingStart="14dp"
        android:paddingEnd="16dp"
        android:textColor="#011A2E"
        android:textColorHint="@color/gray02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ed_description_up"
        app:layout_constraintTop_toBottomOf="@+id/ed_description_up" />

    <EditText
        android:id="@+id/ed_description_up"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_edittext01"
        android:drawableStart="@drawable/ic_description_gray"
        android:ems="10"
        android:layout_margin="16dp"
        android:hint="Գրքի նկարագրությունը"
        android:inputType="textEmailAddress"
        android:paddingStart="14dp"
        android:textColor="#011A2E"
        android:textColorHint="@color/gray02"
        app:layout_constraintEnd_toEndOf="@+id/ed_title_up"
        app:layout_constraintStart_toStartOf="@+id/ed_title_up"
        app:layout_constraintTop_toBottomOf="@+id/ed_title_up" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_up_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_button01"
        android:backgroundTint="@color/blue"
        android:text="Թարմացնել"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ed_categorie_up"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ed_categorie_up"
        app:layout_constraintTop_toBottomOf="@+id/ed_categorie_up" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="@drawable/shape_toolbar12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/l" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Թարմացնել գիրքը"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/ed_title_up"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_edittext01"
        android:drawableStart="@drawable/ic_subtitles_gray"
        android:ems="10"
        android:hint="Գրքի անվանումը"
        android:inputType="textEmailAddress"
        android:paddingStart="14dp"
        android:textColor="#011A2E"
        android:textColorHint="@color/gray02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint" />
</androidx.constraintlayout.widget.ConstraintLayout>